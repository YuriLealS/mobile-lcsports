<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favoritos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout style="@style/header">

            <ImageView
                style="@style/home"
                android:id="@+id/bt_home"/>

            <ImageView
                style="@style/lupa"
                android:id="@+id/bt_lupa"
             />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="100dp"
                android:src="@mipmap/logo"
                android:id="@+id/bt_home2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/titulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_favoritos"
                android:textColor="@color/primary_color"/>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="503dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/publicacao"
                        android:src="@mipmap/publi1"
                        android:id="@+id/img1"/>

                    <ImageView
                        style="@style/publicacao"
                        android:src="@mipmap/publi2"
                        android:id="@+id/img2"/>


                    <ImageView
                        style="@style/publicacao"
                        android:src="@mipmap/publi3"
                        android:id="@+id/img3"/>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout style="@style/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/like"
            android:id="@+id/bt_favoritos"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:src="@mipmap/publicar"
            android:id="@+id/bt_publicar"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:src="@mipmap/perfil"
            android:id="@+id/bt_perfil"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>