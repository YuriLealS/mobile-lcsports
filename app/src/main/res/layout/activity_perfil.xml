<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout style="@style/header">

            <ImageView
                style="@style/home"
                android:id="@+id/bt_home"
                />

            <ImageView
                style="@style/lupa"
                android:id="@+id/bt_lupa"
                />

            <ImageView
                style="@style/premium"
                android:id="@+id/bt_home2"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="591dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_perfil"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:src="@mipmap/padrao" />

                            <TextView
                                android:id="@+id/nomeCostureira"
                                style="@style/texto_azul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nome"
                                android:textAlignment="center"
                                android:textFontWeight="1" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/texto_azul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bio"
                                android:textColor="@color/primary_color"
                                android:textFontWeight="1"
                                android:textSize="25dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/tvBio"
                                    style="@style/texto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sembio"
                                    android:textAlignment="center"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <TextView
                                style="@style/texto_azul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ctt"
                                android:textColor="@color/primary_color"
                                android:textFontWeight="1"
                                android:textSize="25dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/whatsapp" />

                                <TextView
                                    android:id="@+id/tvWpp"
                                    style="@style/texto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/semnum"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/email" />

                                <TextView
                                    android:id="@+id/tvEmail"
                                    style="@style/texto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/sememail"
                                    android:textSize="13sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/texto_azul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/anuncios"
                            android:textAlignment="center"
                            android:textSize="23dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="7.5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_border"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="180dp"
                                    android:layout_height="180dp"
                                    android:src="@mipmap/publi1"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_border"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="180dp"
                                    android:layout_height="180dp"
                                    android:src="@mipmap/publi2"/>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <LinearLayout style="@style/footer">

            <ImageView
                style="@style/favoritos"
                android:id="@+id/bt_favoritos"/>

            <ImageView
                style="@style/publicar"
                android:id="@+id/bt_publicar"/>

            <ImageView
                style="@style/perfil"
                android:id="@+id/bt_perfil"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>